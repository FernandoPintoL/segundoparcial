<odoo>
  <data>
    <record model="ir.actions.act_window" id="escuela.alumno_action_window">
      <field name="name">Alumnos</field>
      <field name="res_model">escuela.alumno</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record id="escuela.alumno_list" model="ir.ui.view">
      <field name="name">Alumno.view.tree</field>
      <field name="model">escuela.alumno</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"></field>
          <field name="apaterno"></field>
          <field name="amaterno"></field>
          <field name="rude"></field>
          <field name="ci"></field>
          <field name="email"></field>
          <field name="celular"></field>
          <field name="tutor_id"></field>
        </tree>
      </field>
    </record>

    <record id="escuela.alumno_form" model="ir.ui.view">
      <field name="name">alumno.view.form</field>
      <field name="model">escuela.alumno</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
              <group>
                <field name="name"></field>
                <field name="apaterno"></field>
                <field name="amaterno"></field>
                <field name="rude"></field>
                <field name="ci"></field>
                <field name="email"></field>
                <field name="celular"></field>
                <field name="tutor_id"></field>
              </group>
          </sheet>
        </form>
      </field>
    </record>
  </data>
</odoo>
